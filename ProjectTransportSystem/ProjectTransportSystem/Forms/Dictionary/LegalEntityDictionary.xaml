<Window x:Class="ProjectTransportSystem.Forms.Dictionary.LegalEntityDictionary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTransportSystem.Forms.Dictionary"
        xmlns:p="clr-namespace:ProjectTransportSystem.Properties"
        mc:Ignorable="d"
        Title="Legal Entity (Dictionary)" Height="300" Width="400">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static p:Resources.Name}"></Label>
        <Label Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static p:Resources.LegalAdress}"></Label>
        <Label Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static p:Resources.Account}"></Label>
        <Label Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static p:Resources.BankName}"></Label>
        <Label Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static p:Resources.OKONX}"></Label>
        <Label Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static p:Resources.OKPO}"></Label>
        <Label Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{x:Static p:Resources.INN}"></Label>

        <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"></TextBox>
        <TextBox Text="{Binding LegalAdress}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"></TextBox>
        <TextBox Text="{Binding Account}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"></TextBox>
        <TextBox Text="{Binding BankName}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"></TextBox>
        <TextBox Text="{Binding OKONX}" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"></TextBox>
        <TextBox Text="{Binding OKPO}" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"></TextBox>
        <TextBox Text="{Binding INN}" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center"></TextBox>

        <Button Name="Action" Grid.Row="7" Grid.ColumnSpan="2">Action</Button>
    </Grid>
</Window>
